<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_normal_bar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/ib_left"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/selector_bg1"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ib_left"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            tools:text="标题"/>

        <TextView
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            tools:text="标题"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="14sp"
                tools:text="标题"/>

            <ImageButton
                android:id="@+id/ib_right_icon2"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_bg1"
                android:src="@drawable/ic_collect_no"/>

            <ImageButton
                android:id="@+id/ib_right_icon1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_bg1"
                android:src="@drawable/ic_share"/>
        </LinearLayout>

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="1dp"
            android:text="子标题"
            android:textColor="#99ffffff"
            android:textSize="11sp"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cust_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</FrameLayout>