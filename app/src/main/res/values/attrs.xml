<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--焦点图自定义属性-->
    <declare-styleable name="FocusView">
        <!--是否需要描述信息-->
        <attr name="describe" format="boolean"/>
        <!--自动轮播的时间间隔-->
        <attr name="auto_play_time" format="integer"/>
        <!--指示器的内边距-->
        <attr name="indicator_padding" format="dimension"/>
        <!--指示器的圆点左右边距-->
        <attr name="indicator_child_margin" format="dimension"/>
        <!--描述信息背景高度-->
        <attr name="desc_height" format="dimension"/>
        <!--描述文本的位置-->
        <attr name="desc_gravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <!--指示器的位置-->
        <attr name="indicator_gravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>


    </declare-styleable>


    <attr name="item_count" format="integer"/>
    <attr name="indicator_color" format="color"/>
    <attr name="tab_select_color" format="color"/>
    <attr name="tab_normal_color" format="color"/>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="item_count"/>
        <attr name="indicator_color"/>
        <attr name="tab_select_color"/>
        <attr name="tab_normal_color"/>
    </declare-styleable>

    <declare-styleable name="CircleIndicatorView">
        <attr name="indicatorRadius" format="dimension"/>
        <attr name="indicatorBorderWidth" format="dimension"/>
        <attr name="indicatorSpace" format="dimension"/>
        <attr name="indicatorColor" format="color"/>
        <attr name="indicatorSelectColor" format="color"/>
        <attr name="enableIndicatorSwitch" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PullToRefresh">
        <attr name="adapterViewBackground" format="reference|color"/>
        <attr name="pheaderBackground" format="reference|color"/>
        <attr name="model">
            <flag name="pullDownFromTop" value="0x1"/>
            <flag name="pullUpFromBottom" value="0x2"/>
            <flag name="both" value="0x3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="CoverImageView">
        <attr name="coverColor" format="color" />
    </declare-styleable>
</resources>