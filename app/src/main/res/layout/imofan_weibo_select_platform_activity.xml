<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00222222"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/imofan_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="分享"
            android:textColor="#343434"
            android:textSize="24sp"
            android:textStyle="normal"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/imofan_share_weixin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/app_button_click_gray_bg"
                android:drawableTop="@drawable/imofan_share_qqfriends_tag"
                android:text="微信"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/imofan_share_webchat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/app_button_click_gray_bg"
                android:gravity="center"
                android:drawableTop="@drawable/imofan_share_webchat_tag"
                android:text="朋友圈"
                android:textColor="@color/color_333333"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/imofan_share_sina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/app_button_click_gray_bg"
                android:drawableTop="@drawable/imofan_share_sina_tag"
                android:text="微博"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/imofan_share_qqfriends"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/app_button_click_gray_bg"
                android:drawableTop="@drawable/imofan_share_qq_friend_tag"
                android:text="QQ"
                android:textColor="@color/color_333333"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/imofan_share_qq_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/app_button_click_gray_bg"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/imofan_share_qq_friend_tag"
                android:text="QQ微博"
                android:textColor="@color/color_333333"
                android:textSize="14sp"
                android:visibility="gone"
                />



            <TextView
                android:id="@+id/imofan_share_qzone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/imofan_share_qzone_tag"
                android:text="QQ空间"
                android:textColor="@color/color_333333"
                android:textSize="14sp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/imofan_share_copy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/app_button_click_gray_bg"
                android:drawableTop="@drawable/imofan_copy_tag"
                android:text="复制链接"
                android:textColor="@color/color_333333"
                android:textSize="10sp"
                android:visibility="visible" />
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ebebeb"
            />
        <Button
            android:id="@+id/imofan_share_cancle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/app_button_click_gray_bg"
            android:drawablePadding="8dp"
            android:text="取消"
            android:textColor="@color/color_333333"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/imofan_top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/imofan_bottom_layout"
        android:background="#00222222"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>